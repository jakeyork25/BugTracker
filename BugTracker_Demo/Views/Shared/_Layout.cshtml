<!DOCTYPE html>
<style>

    #main-container {
        left: 15%;
        height: 100%;
        width: 85%;
        position: absolute;
        background-image: url(https://media.gettyimages.com/vectors/layered-map-topography-abstract-background-pattern-vector-id1136922919?k=20&m=1136922919&s=612x612&w=0&h=wX19S71p0C6rsJ8-GSO2EY0RI4fcMQjgZ_4OZog7vZQ=);
        background-size: cover;
    }

    #side-panel {
        height: 100%;
        width: 15%;
        background-color: #073b4c;
        position: fixed;
        text-align: left;
        left: 0px;
        padding-top: 10%;
        filter: drop-shadow(0.6rem 0.6rem .8rem black);
    }

        #side-panel p {
            padding: 5% 8px 6px 16px;
            text-decoration: none;
            color: lightblue;
            filter: saturate(70%);
            font-family: Courier New, Courier, monospace;
            font-size: 14px;
            display: block;
            background-color: rgb(50, 50, 50);
        }

        #side-panel form{
            padding-top: 7%;
        }

        #side-panel button {
            padding: 5% 8px 6px 16px;
            text-decoration: none;
            color: rgb(220, 220, 220);
            font-size: 20px;
            font-family: Courier New, Courier, monospace;
            display: block;
            border: 0px;
            background-color: transparent;
        }

            #side-panel button:hover {
                color: white;
            }
            #side-panel button:focus {
                border: none;
                outline: none;
                background-color: transparent;
            }

    .page-header {
        position: absolute;
        left: 50%;
        top: 2%;
        transform: translateX(-50%);
        color: white;
        font-family: Courier New, Courier, monospace;
    }

    label {
        color: white;
        font-family: Courier New, Courier, monospace;
    }

    input[type=text] {
        border: 1px solid white;
        color: white;
        background-color: transparent;
        font-family: Courier New, Courier, monospace;
    }
        input[type=text]:focus{
            border: none;
            outline: none;
            border: 1px solid white;
        }
    textarea {
        border: 1px solid white;
        color: white;
        background-color: transparent;
        font-family: Courier New, Courier, monospace;
    }
    textarea:focus {
        border: none;
        outline: none;
        border: 1px solid white;
    }

    .submit-button {
        border: none;
        outline: none;
        width: 50%;
        height: 7%;
        background-color: #06d6a0;
        color: white;
        position: absolute;
        top: 86%;
        left: 50%;
        transform: translateX(-50%);
        animation-duration: 0.5s;
        animation-name: unfocus-button;
        animation-fill-mode: forwards;
        font-family: Courier New, Courier, monospace;
    }

    @@keyframes unfocus-button {
        from {
            border-radius: 12px;
            color: black;
        }

        to {
            border-radius: 0px;
            color: white;
        }
    }

    .submit-button:hover {
        border: none;
        outline: none;
        animation-duration: 1s;
        animation-name: focus-button;
        animation-fill-mode: forwards;
    }

    @@keyframes focus-button {
        from {
            border-radius: 0px;
            color: white;
        }

        to {
            border-radius: 12px;
            color: black;
        }
    }

    .submit-button:focus{
        border: none;
        outline: none;
    }

</style>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTracker_Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/highcharts.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
